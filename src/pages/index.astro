---
import Layout from "@/layouts/Layout.astro";
import { Tinder } from "@/components/tinder.tsx";
import { Wishes } from "@/components/wishes.tsx";
import { MapPin } from "lucide-react";

import "@/styles/globals.css";
---

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap"
  rel="stylesheet"
/>

<Layout title="Hiếu & Thảo Nguyên">
  <main class="w-screen h-auto flex flex-col overflow-auto">
    {/**/}
    <section class="h-[100svh] w-screen relative @container" id="image">
      <Tinder client:load />
    </section>

    <section
      id="timeline"
      class="flex flex-col justify-center flex-1 pb-20 px-2"
    >
      <h3
        class="block my-12 lg:my-8 text-center text-4xl italic text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent"
      >
        Save The Date
      </h3>

      <div
        class="flex flex-col gap-16 justify-evenly lg:flex-row lg:justify-center lg:gap-36"
      >
        <div>
          <h6 class="text-center text-xl text-muted-foreground mb-4 uppercase">
            Tiệc cưới nhà gái
          </h6>
          <p class="text-center text-xl font-semibold">11:00 AM - Chủ Nhật</p>
          <p
            class="text-center text-6xl leading-normal text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent"
          >
            17.12.2023
          </p>
          <p class="text-center italic">(ngày 05 tháng 11 năm Quý Mão)</p>
          <a
            href="https://maps.app.goo.gl/o4aG7je2xuxm2Nep7"
            target="_blank"
            class="group"
            style="text-decoration-thickness: 2px"
          >
            <p class="text-center text-2xl font-light mt-4">Sảnh tầng 2</p>
            <p
              class="group-hover:underline text-center text-3xl leading-normal lg:ml-7"
            >
              Nhà hàng Ngân Trình 2
              <MapPin
                size={30}
                className="mb-2 stroke-[1.5] inline text-primary opacity-70 group-hover:opacity-100"
              />
            </p>
            <p class="text-center italic leading-loose">
              Cầu Đòn, TT. Nam Đàn, Nam Đàn, Nghệ An
            </p>
          </a>
        </div>

        <div>
          <h6 class="text-center text-lg text-muted-foreground mb-4 uppercase">
            Lễ thành hôn
          </h6>
          <p class="text-center text-xl font-semibold">10:00 AM - thứ Tư</p>
          <p
            class="text-center text-6xl leading-normal text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent"
          >
            20.12.2023
          </p>
          <p class="text-center italic">(ngày 08 tháng 11 năm Quý Mão)</p>
          <a
            href="https://maps.app.goo.gl/NYSSy6r5xcgXGA8cA"
            target="_blank"
            class="group"
            style="text-decoration-thickness: 2px"
          >
            <p class="text-center text-2xl font-light mt-4">Tổ chức tại</p>
            <p
              class="group-hover:underline text-center text-3xl leading-normal ml-9"
            >
              Nhà Trai
              <MapPin
                size={30}
                className="mb-2 stroke-[1.5] inline text-primary opacity-70 group-hover:opacity-100"
              />
            </p>
            <p class="text-center italic leading-loose">
              Thôn Liên Bách, Nam Lợi, Nam Trực, Nam Định
            </p>
          </a>
        </div>
      </div>
    </section>

    <Wishes client:load />
  </main>
</Layout>
